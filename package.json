{
  "name": "raytracer",
  "version": "0.1",
  "main": "dist/app.js",
  "license": "MIT",
  "description": "simple raytracer",
  "author": "Andre Castelo (andrecastelo@pm.me)",
  "scripts": {
    "start": "tsc && node dist/app.js",
    "test": "jest",
    "test:watch": "jest --coverage --watchAll",
    "build": "tsc",
    "build:watch": "onchange 'src/**/*.ts' -- npm run build",
    "view:coverage": "serve coverage/lcov-report",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.8",
    "@types/source-map-support": "^0.5.3",
    "jest": "^26.5.2",
    "onchange": "^7.0.2",
    "serve": "^11.3.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.4.1",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
}
